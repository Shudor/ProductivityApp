@model ProductivityApp.ViewModels.DashboardViewModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fa-solid fa-chart-line"></i> Dashboard
    </h2>

    <button id="themeToggle"
            class="btn btn-outline-secondary"
            title="Toggle dark mode">
        <i class="fa-solid fa-moon"></i>
    </button>
</div>

<div class="mb-4">
    <h5>Today's progress</h5>
    <div class="progress">
        <div class="progress-bar bg-success"
             role="progressbar"
             style="width: @Model.CompletionPercentage%;"
             aria-valuenow="@Model.CompletionPercentage"
             aria-valuemin="0"
             aria-valuemax="100">
            @Model.CompletionPercentage%
        </div>
    </div>
</div>

<div class="row">
    <!-- TODAY -->
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <i class="fa-solid fa-list-check"></i> Today (@Model.TodayTasks.Count)
            </div>
            <ul class="list-group list-group-flush">
                @if (!Model.TodayTasks.Any())
                {
                    <li class="list-group-item text-muted">No tasks for today</li>
                }
                @foreach (var task in Model.TodayTasks)
                {
                    <li class="list-group-item">
                        <form asp-controller="Tasks"
                              asp-action="ToggleComplete"
                              method="post"
                              class="d-flex align-items-center">

                            @Html.AntiForgeryToken()

                            <input type="hidden" name="id" value="@task.Id" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                            <input type="checkbox"
                                   class="form-check-input me-2"
                                   onchange="this.form.submit()" />

                            <span>@task.Title</span>
                        </form>
                    </li>
                }
            </ul>
        </div>
    </div>
    
    <!-- UPCOMING -->
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header bg-success text-white">
                <i class="fa-solid fa-calendar-days"></i> Upcoming (@Model.UpcomingTasks.Count)
            </div>
            <ul class="list-group list-group-flush">
                @if (!Model.UpcomingTasks.Any())
                {
                    <li class="list-group-item text-muted">No upcoming tasks</li>
                }
                @foreach (var task in Model.UpcomingTasks)
                {
                    <li class="list-group-item">
                        @task.Title
                        <small class="task-date">
                            (@task.DueDate?.ToString("dd.MM"))
                        </small>
                    </li>
                }
            </ul>
        </div>
    </div>
    
    <!-- OVERDUE -->
    <div class="col-md-4">
        <div class="card mb-3 border-danger">
            <div class="card-header bg-danger text-white">
                <i class="fa-solid fa-triangle-exclamation"></i> Overdue (@Model.OverdueTasks.Count)
            </div>
            <ul class="list-group list-group-flush">
                @if (!Model.OverdueTasks.Any())
                {
                    <li class="list-group-item text-muted">No overdue tasks 🎉</li>
                }
                @foreach (var task in Model.OverdueTasks)
                {
                    <li class="list-group-item text-danger">
                        @task.Title
                        <small>
                            (@task.DueDate?.ToString("dd.MM"))
                        </small>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<hr />

<h4><i class="fa-solid fa-fire"></i> Habits</h4>

<ul class="list-group">
    @foreach (var habit in Model.Habits)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>
                @habit.Name (🔥 @habit.Streak)
            </span>

            @if (habit.LastCompletedDate != DateTime.Today)
            {
                <a asp-controller="Habits"
                   asp-action="Complete"
                   asp-route-id="@habit.Id"
                   asp-route-returnUrl="@Context.Request.Path"
                   class="btn btn-sm btn-success">
                    Done
                </a>
            }
            else
            {
                <span class="badge bg-success">
                    <i class="fa-solid fa-check"></i> Done today
                </span>
            }
        </li>
    }
</ul>