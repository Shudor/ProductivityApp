@model ProductivityApp.ViewModels.DashboardViewModel

<h2 class="mb-4">Dashboard</h2>

<div class="row">
    <!-- TODAY -->
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                Today (@Model.TodayTasks.Count)
            </div>
            <ul class="list-group list-group-flush">
                @if (!Model.TodayTasks.Any())
                {
                    <li class="list-group-item text-muted">No tasks for today</li>
                }
                @foreach (var task in Model.TodayTasks)
                {
                    <li class="list-group-item">
                        <form asp-controller="Tasks"
                              asp-action="ToggleComplete"
                              method="post"
                              class="d-flex align-items-center">

                            @Html.AntiForgeryToken()

                            <input type="hidden" name="id" value="@task.Id" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                            <input type="checkbox"
                                   class="form-check-input me-2"
                                   onchange="this.form.submit()" />

                            <span>@task.Title</span>
                        </form>
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- UPCOMING -->
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header bg-success text-white">
                Upcoming (@Model.UpcomingTasks.Count)
            </div>
            <ul class="list-group list-group-flush">
                @if (!Model.UpcomingTasks.Any())
                {
                    <li class="list-group-item text-muted">No upcoming tasks</li>
                }
                @foreach (var task in Model.UpcomingTasks)
                {
                    <li class="list-group-item">
                        @task.Title
                        <small class="text-muted">
                            (@task.DueDate?.ToString("dd.MM"))
                        </small>
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- OVERDUE -->
    <div class="col-md-4">
        <div class="card mb-3 border-danger">
            <div class="card-header bg-danger text-white">
                Overdue (@Model.OverdueTasks.Count)
            </div>
            <ul class="list-group list-group-flush">
                @if (!Model.OverdueTasks.Any())
                {
                    <li class="list-group-item text-muted">No overdue tasks 🎉</li>
                }
                @foreach (var task in Model.OverdueTasks)
                {
                    <li class="list-group-item text-danger">
                        @task.Title
                        <small>
                            (@task.DueDate?.ToString("dd.MM"))
                        </small>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<hr />

<h4>Habits</h4>
<ul class="list-group">
    @foreach (var habit in Model.Habits)
    {
        <li class="list-group-item d-flex justify-content-between">
            <span>@habit.Name (🔥 @habit.Streak)</span>
            <a asp-controller="Habits"
               asp-action="Complete"
               asp-route-id="@habit.Id"
               class="btn btn-sm btn-success">
                Done
            </a>
        </li>
    }
</ul>