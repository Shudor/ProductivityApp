@model IEnumerable<ProductivityApp.Models.Habit>

<h2>Habits</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Habit</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Streak</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var habit in Model)
        {
            <tr>
                <td>@habit.Name</td>
                <td>🔥 @habit.Streak</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@habit.Id"
                       class="btn btn-sm btn-warning me-1">
                        Edit
                    </a>

                    @if (habit.LastCompletedDate != DateTime.Today)
                    {
                        <a asp-action="Complete"
                           asp-route-id="@habit.Id"
                           asp-route-returnUrl="@Context.Request.Path"
                           class="btn btn-sm btn-success me-1">
                            Done
                        </a>
                    }
                    else
                    {
                        <span class="text-success fw-bold me-2">✔ Done today</span>
                    }

                    <form asp-action="Delete"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@habit.Id" />
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>